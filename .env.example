# ============================================
# DROPSHIPPING APP - Environment Variables
# ============================================

# ---- DATABASE ----
DATABASE_URL=postgresql://dropshipping_user:dropshipping_pass@localhost:5432/dropshipping_dev

# ---- JWT & AUTH ----
JWT_SECRET=your-super-secret-jwt-key-change-in-production-12345
JWT_EXPIRATION=7d

# ---- STRIPE PAYMENT ----
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ---- NODE ENV ----
NODE_ENV=development
PORT=3001

# ---- FRONTEND ----
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_STRIPE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---- EMAIL SERVICE ----
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@dropshippingapp.com

# ---- THIRD PARTY APIs ----
ALIEXPRESS_API_KEY=your-aliexpress-api-key
ALIEXPRESS_API_SECRET=your-aliexpress-api-secret

# ---- LOGGING ----
LOG_LEVEL=info

# ---- CORS ----
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ---- SESSION ----
SESSION_SECRET=your-session-secret-key-change-in-production
